  "endpoints": {
    "symbols": {
      "method": "GET",
      "path": "/api/v1/symbols",
      "auth": false,
      "description": "List all available symbols"
    },
    "rounds_current": {
      "method": "GET",
      "path": "/api/v1/rounds/current",
      "params": ["symbol"],
      "auth": false,
      "description": "Get current active round for a symbol"
    },
    "rounds_history": {
      "method": "GET",
      "path": "/api/v1/rounds/history",
      "params": ["symbol", "page", "limit"],
      "auth": false,
      "description": "Get historical rounds"
    },
    "bets_create": {
      "method": "POST",
      "path": "/api/v1/bets",
      "body": ["symbol", "direction"],
      "auth": true,
      "description": "Place a bet on current round"
    },
    "bets_me": {
      "method": "GET",
      "path": "/api/v1/bets/me",
      "params": ["symbol", "page", "limit"],
      "auth": true,
      "description": "Get my bet history"
    },
    "bots_me": {
      "method": "GET",
      "path": "/api/v1/bots/me",
      "auth": true,
      "description": "Get my global score and stats"
    },
    "bots_me_stats": {
      "method": "GET",
      "path": "/api/v1/bots/me/stats",
      "params": ["symbol"],
      "auth": true,
      "description": "Get my symbol-specific stats"
    },
    "leaderboard": {
      "method": "GET",
      "path": "/api/v1/leaderboard",
      "params": ["symbol", "limit"],
      "auth": false,
      "description": "Get global or symbol-specific leaderboard"
    },
    "market": {
      "method": "GET",
      "path": "/api/v1/market/{symbol}",
      "auth": false,
      "description": "Get market data for a symbol"
    }
  },
  "game_rules": {
    "default_round_duration_minutes": 10,
    "schedule": "Every :00, :10, :20, :30, :40, :50",
    "bet_options": ["long", "short"],
    "points": {
      "win": 10,
      "lose": -5,
      "draw": 0
    },
    "initial_score": 100,
    "draw_threshold_percent": 0.01,
    "price_source": "Public Market APIs",
    "multi_symbol_betting": true,
    "per_symbol_leaderboard": true
  }
